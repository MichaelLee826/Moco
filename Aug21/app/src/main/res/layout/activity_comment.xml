<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Comment_BackgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#47bb96"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/Comment_BackgroundLayout_NameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布评价"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/Comment_BackgroundLayout_BackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_back"
            android:background="#00000000"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/Comment_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总体评价:"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_below="@+id/Comment_BackgroundLayout"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/Comment_TextView"
        android:layout_below="@+id/Comment_BackgroundLayout"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/Comment_heart1_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart_gray"/>
        <ImageView
            android:id="@+id/Comment_heart2_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/heart_gray"/>
        <ImageView
            android:id="@+id/Comment_heart3_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/heart_gray"/>
        <ImageView
            android:id="@+id/Comment_heart4_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/heart_gray"/>
        <ImageView
            android:id="@+id/Comment_heart5_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/heart_gray"/>

    </LinearLayout>

    <EditText
        android:id="@+id/Comment_Content_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="left"
        android:minLines="10"
        android:background="#cfcece"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_below="@+id/Comment_TextView"/>

    <Button
        android:id="@+id/Comment_Confirm_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="提交评价"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/selector_button" />
</RelativeLayout>