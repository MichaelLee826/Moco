<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Publish_BackgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#47bb96"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/Publish_BackgroundLayoutNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布课程"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/Publish_BackgroundLayout_BackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_back"
            android:background="#00000000"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Publish_BackgroundLayout"
        android:layout_above="@+id/Publish_Save_Button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/Publish_CourseName_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d9d9d9"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程名称"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"/>

                <TextView
                    android:id="@+id/Publish_CourseName_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未填写"
                    android:textSize="16sp"
                    android:textColor="#838383"
                    android:layout_toLeftOf="@+id/Publish_CourseName_Arrow"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/Publish_CourseName_Arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Publish_CourseClassification_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d9d9d9"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程分类"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"/>

                <TextView
                    android:id="@+id/Publish_CourseClassification_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未填写"
                    android:textSize="16sp"
                    android:textColor="#838383"
                    android:layout_toLeftOf="@+id/Publish_CourseClassification_Arrow"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/Publish_CourseClassification_Arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Publish_CoursePicture_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d9d9d9"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程图片"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"/>

                <TextView
                    android:id="@+id/Publish_CoursePicture_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未上传"
                    android:textSize="16sp"
                    android:textColor="#838383"
                    android:layout_toLeftOf="@+id/Publish_CoursePicture_Arrow"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/Publish_CoursePicture_Arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Publish_CourseIntro_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d9d9d9"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程简介"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"/>

                <TextView
                    android:id="@+id/Publish_CourseIntro_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未填写"
                    android:textSize="16sp"
                    android:textColor="#838383"
                    android:layout_toLeftOf="@+id/Publish_CourseIntro_Arrow"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/Publish_CourseIntro_Arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Publish_TeacherName_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d9d9d9"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="讲师姓名"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"/>

                <TextView
                    android:id="@+id/Publish_TeacherName_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未填写"
                    android:textSize="16sp"
                    android:textColor="#838383"
                    android:layout_toLeftOf="@+id/Publish_TeacherName_Arrow"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/Publish_TeacherName_Arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Publish_CoursePrice_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d9d9d9"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程价格"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"/>

                <TextView
                    android:id="@+id/Publish_CoursePrice_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未填写"
                    android:textSize="16sp"
                    android:textColor="#838383"
                    android:layout_toLeftOf="@+id/Publish_CoursePrice_Arrow"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/Publish_CoursePrice_Arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Publish_CourseNumber_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d9d9d9"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开课人数"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"/>

                <TextView
                    android:id="@+id/Publish_CourseNumber_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未填写"
                    android:textSize="16sp"
                    android:textColor="#838383"
                    android:layout_toLeftOf="@+id/Publish_CourseNumber_Arrow"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/Publish_CourseNumber_Arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Publish_CourseDate_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d9d9d9"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开课日期"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"/>

                <TextView
                    android:id="@+id/Publish_CourseDate_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未填写"
                    android:textSize="16sp"
                    android:textColor="#838383"
                    android:layout_toLeftOf="@+id/Publish_CourseDate_Arrow"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/Publish_CourseDate_Arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Publish_CourseTime_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d9d9d9"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开课时段"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"/>

                <TextView
                    android:id="@+id/Publish_CourseTime_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未填写"
                    android:textSize="16sp"
                    android:textColor="#838383"
                    android:layout_toLeftOf="@+id/Publish_CourseTime_Arrow"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/Publish_CourseTime_Arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Publish_CourseLocation_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d9d9d9"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开课地点"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"/>

                <TextView
                    android:id="@+id/Publish_CourseLocation_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未填写"
                    android:textSize="16sp"
                    android:textColor="#838383"
                    android:layout_toLeftOf="@+id/Publish_CourseLocation_Arrow"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/Publish_CourseLocation_Arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/Publish_Save_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="提交"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/selector_button" />
</RelativeLayout>