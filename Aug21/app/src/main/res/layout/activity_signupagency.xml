<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/SignUpAgencyBackgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#47bb96"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/SignUpAgencyBackgroundLayoutNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要注册机构"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/SignUpAgencyBackgroundLayoutBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_back"
            android:background="#00000000"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SignUpAgencyBackgroundLayout"
        android:layout_above="@+id/SignUpAgencySignUpButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="机构名称："
                    android:textSize="15sp"
                    android:textColor="#9a9a9a"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/SignUpAgencyAgencyNameEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:background="#cfcece"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:layout_weight="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="工商局注册号："
                    android:textSize="15sp"
                    android:textColor="#9a9a9a"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/SignUpAgencyAgencyNumberEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:background="#cfcece"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:layout_weight="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="注册人姓名："
                    android:textSize="15sp"
                    android:textColor="#9a9a9a"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/SignUpAgencyOwnerNameEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:background="#cfcece"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:layout_weight="2"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="注册人证件号："
                    android:textSize="15sp"
                    android:textColor="#9a9a9a"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/SignUpAgencyOwnerIDEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:background="#cfcece"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:layout_weight="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="联系电话："
                    android:textSize="15sp"
                    android:textColor="#9a9a9a"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/SignUpAgencyContactEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:inputType="phone"
                    android:padding="5dp"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:background="#cfcece"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:layout_weight="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开课地点："
                    android:textColor="#9a9a9a"
                    android:textSize="15sp"
                    android:layout_gravity="center"/>

                <Spinner
                    android:id="@+id/SignUpAgencyProvinceSpinner"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.5">
                </Spinner>

                <Spinner
                    android:id="@+id/SignUpAgencyCitySpinner"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.5">
                </Spinner>

                <Spinner
                    android:id="@+id/SignUpAgencyDistrictSpinner"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.5">
                </Spinner>
            </LinearLayout>

            <EditText
                android:id="@+id/SignUpAgencyLocationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="详细地址"
                android:padding="10dp"
                android:gravity="left"
                android:background="#cfcece"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机构简介："
                android:textSize="15sp"
                android:textColor="#9a9a9a"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/SignUpAgencyIntroEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="简介的介绍，让讲师更容易了解机构概况"
                android:textSize="15sp"
                android:padding="10dp"
                android:gravity="left"
                android:background="#cfcece"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:lines="4"
                android:imeOptions="actionDone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/PublishOnePictureTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="机构图片："
                    android:textColor="#9a9a9a"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加个性机构图片，让你的机构更具品牌性！"
                    android:textColor="#9a9a9a"
                    android:textSize="10sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/SignUpAgencyPictureImageButton"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/place_holder2"
                android:scaleType="fitXY"
                android:layout_margin="10dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/SignUpAgencySignUpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="提交审核"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/selector_button" />
</RelativeLayout>