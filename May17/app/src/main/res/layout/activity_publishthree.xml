<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Layout_PublishThree"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/PublishThreeBackgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#47bb96"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/PublishThreeBackgroundLayoutNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要发布"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/PublishThreeBackgroundLayoutBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_back"
            android:background="#00000000"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PublishThreeBackgroundLayout"
        android:layout_above="@+id/PublishThreeNextButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

            <RelativeLayout
                android:id="@+id/PublishThreeAgent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/PublishThreeAgentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开课机构："
                    android:textColor="#9a9a9a"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                <Spinner
                    android:id="@+id/PublishThreeAgencySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="bottom"
                    android:layout_toRightOf="@+id/PublishThreeAgentName"
                    >
                </Spinner>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/PublishThreeTeacherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_below="@+id/PublishThreeAgent">

                <TextView
                    android:id="@+id/PublishThreeTeacherNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="讲师姓名："
                    android:textColor="#9a9a9a"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:id="@+id/PublishThreeTeacherNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:background="#cfcece"
                    android:singleLine="true"
                    android:imeOptions="actionNext"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/PublishThreeTeacherIntro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_below="@+id/PublishThreeTeacherName">

                <TextView
                    android:id="@+id/PublishThreeTeacherIntroTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="讲师介绍："
                    android:textColor="#9a9a9a"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:id="@+id/PublishThreeTeacherIntroEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:background="#cfcece"
                    android:singleLine="true"
                    android:imeOptions="actionNext"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/PublishThreeContactInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_below="@+id/PublishThreeTeacherIntro">

                <TextView
                    android:id="@+id/PublishThreeContactTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话："
                    android:textColor="#9a9a9a"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:id="@+id/PublishThreeContactEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:padding="5dp"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:background="#cfcece"
                    android:singleLine="true"
                    android:imeOptions="actionNext"/>
            </LinearLayout>

            <TextView
                android:id="@+id/PublishThreeCourseIntroTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程简介："
                android:textColor="#9a9a9a"
                android:textSize="15sp"
                android:layout_margin="10dp" />

            <EditText
                android:id="@+id/PublishThreeCourseIntroEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:padding="10dp"
                android:hint="简洁的介绍，让学员清晰明了地了解课程内容"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#cfcece"
                android:imeOptions="actionNext"/>

            <LinearLayout
                android:id="@+id/PublishThreeTargetCustomer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_below="@+id/PublishThreeIntroEditText">

                <TextView
                    android:id="@+id/PublishThreeTargetCustomerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="适用人群："
                    android:textColor="#9a9a9a"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:id="@+id/PublishThreeTargetCustomerEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:background="#cfcece"
                    android:singleLine="true"
                    android:imeOptions="actionNext"/>
            </LinearLayout>

            <TextView
                android:id="@+id/PublishThreeCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程目录："
                android:textColor="#9a9a9a"
                android:textSize="15sp"
                android:layout_margin="10dp" />

            <LinearLayout
                android:id="@+id/PublishThreeCategoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/PublishThreeButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/PublishThreePlusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="+"
                    android:textColor="#9a9a9a"/>

                <Button
                    android:id="@+id/PublishThreeMinusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="-"
                    android:textColor="#9a9a9a"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/PublishThreeNextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="提交课程"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="#47bb96" />
</RelativeLayout>