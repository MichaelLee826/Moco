<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Layout_PublishOne"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/PublishOneBackgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#47bb96"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/PublishOneBackgroundLayoutNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要发布"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/PublishOneBackgroundLayoutBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_back"
            android:background="#00000000"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/PublishOneNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课程名称："
        android:textColor="#9a9a9a"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:layout_below="@+id/PublishOneBackgroundLayout"/>

    <EditText
        android:id="@+id/PublishOnenameEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:maxLines="1"
        android:padding="10dp"
        android:inputType="text"
        android:hint="简洁清晰的名字，让学员更容易找到你"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#cfcece"
        android:layout_below="@+id/PublishOneNameTextView"
        android:imeOptions="actionNext"/>

    <TextView
        android:id="@+id/PublishOneClassTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课程分类："
        android:textColor="#9a9a9a"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/PublishOnenameEditText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="如果找不到对应分类，请反馈给墨课客服"
        android:textColor="#9a9a9a"
        android:textSize="10sp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/PublishOneClassTextView"
        android:layout_alignBottom="@+id/PublishOneClassTextView"/>

    <LinearLayout
        android:id="@+id/PublishOneSpinners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PublishOneClassTextView"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/PublishOneSpinner1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/PublishOneSpinner2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/PublishOnePictureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课程图片："
        android:textColor="#9a9a9a"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/PublishOneSpinners"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加个性课程图片，让你的课程更有吸引力！"
        android:textColor="#9a9a9a"
        android:textSize="10sp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/PublishOnePictureTextView"
        android:layout_alignBottom="@+id/PublishOnePictureTextView"/>

    <ImageButton
        android:id="@+id/PublishOneImageButton"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/icon"
        android:layout_below="@+id/PublishOnePictureTextView"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/PublishOneNextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="保存并进入下一步"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/button_selector" />
</RelativeLayout>