<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:id="@+id/SignUpAccountLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="用户名："
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="left"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/SignUpAccountEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入5~10位字母和数字"
            android:maxLength="10"
            android:textColorHint="#84ffffff"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/SignUpPhoneNumberLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/SignUpAccountLayout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="手机号码："
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="left"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/SignUpPhoneNumberEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:textColorHint="#84ffffff"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/SignUpPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/SignUpPhoneNumberLayout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="left"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/SignUpPasswordEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请设置密码"
            android:inputType="textPassword"
            android:textColorHint="#84ffffff"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/SignUpCodeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/SignUpPasswordLayout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="验证码："
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="left"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/SignUpCodeEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColorHint="#84ffffff"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_weight="2"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/SignUpImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_signup"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/SignUpCodeLayout" />
</RelativeLayout>