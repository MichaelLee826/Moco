<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Layout_PublishThree"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/PublishThreeBackgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#47bb96"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/PublishThreeBackgroundLayoutNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要发布"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/PublishThreeBackgroundLayoutBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_back"
            android:background="#00000000"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PublishThreeBackgroundLayout"
        android:layout_above="@+id/PublishThreeNextButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/PublishThreeIntroTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程简介："
                android:textColor="#9a9a9a"
                android:textSize="15sp"
                android:layout_margin="10dp" />

            <EditText
                android:id="@+id/PublishThreeIntroEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:hint="简洁的介绍，让学员清晰明了地了解课程内容"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#cfcece"/>

            <TextView
                android:id="@+id/PublishThreeCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程目录："
                android:textColor="#9a9a9a"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:id="@+id/PublishThreeCategoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/PublishThreeCategoryEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#cfcece"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/PublishThreeButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/PublishThreePlusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="+"
                    android:textColor="#9a9a9a"/>

                <Button
                    android:id="@+id/PublishThreeMinusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="-"
                    android:textColor="#9a9a9a"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/PublishThreeNextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="提交课程"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="#47bb96" />
</RelativeLayout>